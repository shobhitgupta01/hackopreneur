<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fbulou.hellohealth.RecipientActivity"
    tools:showIn="@layout/activity_recipient">

    <EditText
        android:id="@+id/mNameEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textCapWords"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Required Blood Group : " />

        <Spinner
            android:id="@+id/mBloodGroupSpinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/mContactEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contact No."
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <EditText
        android:id="@+id/mAddressEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SendSMSButton"
        android:text="Send SMS to people" />

</LinearLayout>
